<div class="pad-top notes">
  <h2> Notes: </h2>
  <table class="user-notes">
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Attachment Name</th>
      <th>Attachment</th>
    </tr>
  {{#each notes}}
    <tr>
      <td>{{this.title}}</td>
      <td>{{this.text}}</td>
      <td>{{this.file_name}}</td>
      <td>
        <a href="/note-download/{{this.file_name}}">
          <i class="fas fa-download"></i>
        </a>
      </td>
    </tr>
  {{/each}}
  </table>
</div>
<div class="notes">
  <h2> Add a new Note: </h2>
  <form class="notes-form" action="/notes" enctype="multipart/form-data" method="post">
    <label>Title:</label>
    <input type="text" name="title" required>
    <label>Note:</label>
    <input type="text" name="text">
    <label>Attachment:</label>
    <input type="file" name="note-upload">
    <input type="submit" value="Create">
  </form>
</div>

